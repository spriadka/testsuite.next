<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://jboss.org/schema/arquillian"
    xsi:schemaLocation="http://jboss.org/schema/arquillian
  http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

  <extension qualifier="docker">
    <property name="dockerContainersFile">src/test/resources/docker-compose.yml</property>
    <property name="cubeSpecificProperties">
      wildfly-rbac-standalone:
        await:
          strategy: log
          match: 'Admin console listening'
      wildfly-rbac-domain-master:
        await:
          strategy: log
          match: 'Admin console listening'
    </property>
  </extension>

  <extension qualifier="webdriver">
    <property name="browser">${browser}</property>
  </extension>

  <container qualifier="jboss" default="true">
    <configuration>
      <property name="managementAddress">${server.ip}</property>
      <property name="managementPort">9990</property>
      <property name="username">admin</property>
      <property name="password">admin</property>
    </configuration>
  </container>


  <extension qualifier="graphene">
    <property name="url">http://${server.ip}:9990/console/ts.html</property>
  </extension>

</arquillian>